{
  "scripts": {
    "test": "sass-lint static/**/*.scss --verbose --no-exit",
    "build": "node-sass --include-path node_modules static/sass --output static/css && postcss --use autoprefixer --replace static/css/*.css",
    "watch": "watch -p 'static/sass/*.scss' -c 'yarn run build'",
    "clean": "rm -rf node_modules yarn-error.log static/css *.log *.sqlite _site/ build/ .jekyll-metadata"
  },
  "author": "Canonical webteam",
  "devDependencies": {
    "autoprefixer": "^7.1.3",
    "postcss-cli": "^4.1.0",
    "node-sass": "^4.5.3",
    "sass-lint": "^1.10.2",
    "vanilla-framework": "1.5.1",
    "watch-cli": "^0.2.2"
  }
}
